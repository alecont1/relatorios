# Database
DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/smarthand

# CORS - Production: add your Vercel domain
CORS_ORIGINS=["http://localhost:5173"]

# JWT Authentication (REQUIRED - generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# Cloudflare R2 Storage (optional - uses local storage if not set)
R2_ENDPOINT_URL=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=smarthand-photos

# Redis (optional - for background jobs)
REDIS_URL=redis://localhost:6379/0

# Debug
DEBUG=true
